<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
    <name>sim_bridge</name>
    <version>0.1.0</version>
    <description>
        TCP Endpoint Package that conducts tcp connections (handshakes) with Unity counterpart.
    </description>
    <maintainer email="dev@mcgillrobotics.com">McGill Robotics</maintainer>
    <license>GPLv3</license>
    <url type="respository">https://github.com/mcgill-robotics/AUV-2025</url>

    <buildtool_depend>colcon</buildtool_depend>

    <build_export_depend>rclpy</build_export_depend>

    <exec_depend>rclpy</build_depend>
    <exec_depend>std_msgs</exec_depend>

    <exec_depend>ros2launch</exec_depend>
    <!-- Referenced from Unity's Git Repo -->
    <exec_depend>message_runtime</exec_depend>
    <!-- Dependencies Copied from AUV-2024 catkin_ws/ -->
    <depend>std_msgs</depend>
    <depend>python3-numpy</depend>
    <depend>tf2</depend>
    <depend>tf2_geometry_msgs</depend>
    <depend>tf2_ros</depend>

    <test_depend>ament_copyright</test_depend>
    <test_depend>ament_flake8</test_depend>
    <test_depend>ament_pep257</test_depend>
    <test_depend>python3-pytest</test_depend>

    <export>
        <build_type>ament_python</build_type>
    </export>
</package>
