<launch>
    <arg name="sim" default="false" />
    <group unless="$(arg sim)">
        <include file="$(find controls)/launch/pid.launch"/>
    </group>
    <group if="$(arg sim)">
        <include file="$(find controls)/launch/pid-sim.launch" />
    </group>
    
    <include file="$(find controls)/launch/superimposer.launch" />
    <include file="$(find controls)/launch/servers.launch" />
</launch>
