<launch>
    <node name="navigate"
          pkg="planner"
          type="navigate.py"
          respawn="false"
          output="screen">
    </node>

    <node name="planner"
          pkg="planner"
          type="planner_node.py"
          respawn="false"
          output="screen">
        <rosparam command="load" file="$(find planner)/config/planner.yaml" />
        <param name="angle_thresh" value="0.175" />
    </node>

    <!--SURGE-->
	<node name="controller" pkg="pid" type="controller" ns="centroid_y_pid" output="screen">
	    <param name="node_name" value="pid" />

	    <!--Default PID Gains (Should load from file eventually)-->
	    <param name="Kp" value="10" />
	    <param name="Ki" value="0.0" />
	    <param name="Kd" value="0.0" />

	    <!--Effort Limits-->
	    <param name="upper_limit" value="1000" />
	    <param name="lower_limit" value="-1000" />

	    <!--Integral Factor Limit-->
	    <param name="windup_limit" value="10" />

	    <!--Set Topics-->
	  	<!--Setpoint will be "/<ns>/setpoint"-->
	  	<!--Enable will be "/<ns>/pid_enable"-->
	  	<param name="topic_from_controller" value="/controls/superimposer/surge" />
	  	<param name="topic_from_plant" value="/lane_detector/centroid_delta_y" />
	</node>

    <!--SWAY-->
	<node name="controller" pkg="pid" type="controller" ns="centroid_x_pid" output="screen">
	    <param name="node_name" value="pid" />

	    <!--Default PID Gains (Should load from file eventually)-->
	    <param name="Kp" value="10" />
	    <param name="Ki" value="0.0" />
	    <param name="Kd" value="0.0" />

	    <!--Effort Limits-->
	    <param name="upper_limit" value="1000" />
	    <param name="lower_limit" value="-1000" />

	    <!--Integral Factor Limit-->
	    <param name="windup_limit" value="10" />

	    <!--Set Topics-->
	  	<!--Setpoint will be "/<ns>/setpoint"-->
	  	<!--Enable will be "/<ns>/pid_enable"-->
	  	<param name="topic_from_controller" value="/controls/superimposer/sway" />
	  	<param name="topic_from_plant" value="/lane_detector/centroid_delta_x" />
	</node>

	<!--LANE_DETECTOR_YAW-->
	<node name="controller" pkg="pid" type="controller" ns="lane_yaw_pid" output="screen">
	    <param name="node_name" value="pid" />

	    <!--Default PID Gains (Should load from file eventually)-->
	    <param name="Kp" value="10" />
	    <param name="Ki" value="0.0" />
	    <param name="Kd" value="0.0" />

	    <!--Effort Limits-->
	    <param name="upper_limit" value="1000" />
	    <param name="lower_limit" value="-1000" />

	    <!--Integral Factor Limit-->
	    <param name="windup_limit" value="10" />

	    <!--Set Topics-->
	  	<!--Setpoint will be "/<ns>/setpoint"-->
	  	<!--Enable will be "/<ns>/pid_enable"-->
	  	<param name="topic_from_controller" value="/controls/superimposer/yaw" />
	  	<param name="topic_from_plant" value="/cv/down_cam_heading_Hough" />
	</node>
</launch>